<?xml version="1.0"?>
<database xmlns="spryker:schema-01" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="zed" xsi:schemaLocation="spryker:schema-01 https://static.spryker.com/schema-01.xsd"
          namespace="Orm\Zed\MerchantProfile\Persistence"
          package="src.Orm.Zed.MerchantProfile.Persistence">

    <table name="spy_merchant">
        <column name="merchant_key" type="VARCHAR" size="255"  description="Identifier for existing entities. It should never be changed."/>

        <unique name="spy_merchant-merchant_key">
            <unique-column name="merchant_key"/>
        </unique>
    </table>


    <table name="spy_merchant_profile_address">
        <column name="key" type="VARCHAR" size="255" description="Identifier for existing entities. It should never be changed."/>

        <unique name="spy_merchant_profile_address-unique-key">
            <unique-column name="key"/>
        </unique>
    </table>

</database>
